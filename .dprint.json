{
  "$schema": "https://dprint.dev/schemas/v0.json",
  "lineWidth": 120,
  "useTabs": false,
  "indentWidth": 2,
  "plugins": [
    "https://plugins.dprint.dev/markdown-0.17.8.wasm",
    "https://plugins.dprint.dev/toml-0.6.4.wasm"
  ],
  "markdown": {
    "lineWidth": 100,
    "textWrap": "always"
  },
  "toml": {
    "indentWidth": 4
  },
  "includes": [
    "**/*.md",
    "**/*.toml"
  ],
  "excludes": [
    "**/target/**",
    "**/node_modules/**",
    "**/.localai/**"
  ]
}
